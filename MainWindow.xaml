<Window x:Class="TestUI.MainWindow"
        xmlns:ctls="clr-namespace:TestUI.Controls" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUI" ResizeMode="CanResize" 
        mc:Ignorable="d" x:Name="AppMainWindow" WindowStyle="None" AllowsTransparency="True"
        Title="MainWindow" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackColor}" FontFamily="Poppins">
    <WindowChrome.WindowChrome>
        <WindowChrome
        CaptionHeight="0"            
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid MouseMove="MainGrid_MouseMove" MouseLeftButtonDown="MainGrid_MouseLeftButtonDown" MouseLeftButtonUp="MainGrid_MouseLeftButtonUp">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource HeaderBackColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1">
                <DockPanel HorizontalAlignment="Center" FlowDirection="RightToLeft">
                    <Border CornerRadius="5" Padding="1">
                        <DockPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="{DynamicResource HeaderTextBoxBackColor}" CornerRadius="3" Margin="0,10,20,10" FlowDirection="LeftToRight">
                                    <Grid>
                                        <TextBox Text=" Search Media" IsReadOnly="True" Foreground="{DynamicResource AppBackColor}" FontSize="14" Width="730" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" FlowDirection="LeftToRight"/>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <Path Data="{DynamicResource filter}" Fill="{DynamicResource AppBackColor}" Width="15" Margin="0,0,10,0" Stretch="Uniform"/>
                                            <Path Data="{DynamicResource search}" Fill="{DynamicResource AppBackColor}" Width="15" Margin="0,0,10,0" Stretch="Uniform"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Border Grid.Column="1" Margin="0,0,45,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{DynamicResource HeaderIconButtonsStyle}" Content="{DynamicResource history}"/>
                                        <Button Style="{DynamicResource HeaderIconButtonsStyle}" Content="{DynamicResource arrowlef}"/>
                                        <Button Style="{DynamicResource HeaderIconButtonsStyle}" Content="{DynamicResource arrowright}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </Border>
                </DockPanel>
            </Border>
            <Border Grid.Column="2">
                <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Border Height="30" Width="30" Margin="0,10,10,10" CornerRadius="5">
                        <Grid>
                            <Button Style="{DynamicResource HeaderIconButtonsStyle}" Content="{DynamicResource help}"/>
                            <Border Background="{DynamicResource NavbarBackColor}" CornerRadius="5" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <Ellipse Fill="{DynamicResource AppBackColor}" Width="8" Height="8" Margin="3,6,0,0" />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Height="25" Width="25" Margin="5,5,5,5">
                        <Grid>
                            <Image Source="Resources\user3.png" Stretch="UniformToFill"/>
                            <Border Background="{DynamicResource NavbarBackColor}" CornerRadius="5" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-3,-3">
                                <Ellipse Fill="Green" Width="10" Height="10" />
                            </Border>
                        </Grid>
                    </Border>
                    <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
                    <Button x:Name="btnRestore" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource restore}" Click="btnRestore_Click"/>
                    <Button x:Name="btnClose" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                </DockPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Background="{DynamicResource NavbarBackColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="0,0,0.1,0">
                <Viewbox MaxWidth="45" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical" FlowDirection="RightToLeft">
                        <Button x:Name="btnHome" Margin="0,10,0,5" Style="{DynamicResource NavBarButtonStyle}" Click="btnHome_Click">
                            <ctls:MenuItem GroupName="MenuItem" Tag="A" IsSelected="True" IndicatorBrush="{DynamicResource AppBackColor}"/>
                        </Button>
                        <Button x:Name="btnDashboard" Margin="0,5,0,5" Style="{DynamicResource NavBarButtonStyle}"  Click="btnDashboard_Click">
                            <ctls:MenuItem GroupName="MenuItem" Tag="B" IndicatorBrush="{DynamicResource AppBackColor}"/>
                        </Button>
                        <Button x:Name="btn3" Margin="0,5,0,0" Style="{DynamicResource NavBarButtonStyle}">
                            <ctls:MenuItem GroupName="MenuItem" Tag="C" IndicatorBrush="{DynamicResource AppBackColor}"/>
                        </Button>
                        <Button x:Name="btn4" Margin="0,10,0,0" Style="{DynamicResource NavBarButtonStyle}">
                            <ctls:MenuItem GroupName="MenuItem" Tag="+" IndicatorBrush="{DynamicResource AppBackColor}"/>
                        </Button>
                    </StackPanel>
                </Viewbox>
            </Border>
            <Border Grid.Column="1" Background="{DynamicResource AppBackColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource NavbarBackColor}">
                        <Button Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Test" Padding="10,5,0,3" VerticalAlignment="Center"/>
                                <Border>
                                    <Path Data="{DynamicResource expand}" Fill="{DynamicResource AppHeaderForeColor}" Width="10" Margin="10" Stretch="Uniform"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource NavbarBackColor}">
                        <Button Style="{StaticResource NavEditButtonStyle}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Border>
                                    <Path Data="{DynamicResource edit}" Fill="{DynamicResource NavbarBackColor}" Width="15" Margin="10" Stretch="Uniform"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Margin="0,.1,0,0" Grid.ColumnSpan="2" Background="{DynamicResource NavbarBackColor}">
                        <StackPanel Margin="0,10,0,0">
                            <StackPanel Margin="0,0,0,10">
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup" IsChecked="True">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <Path Data="{DynamicResource mention}" Fill="{DynamicResource AppBackColor}" Width="15"  Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Text="Mentions &amp; reactions" Style="{StaticResource NavRadioButtonTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <Path Data="{DynamicResource bookmark}" Fill="{DynamicResource AppBackColor}" Width="15" Height="14"  Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Text="Saved items" Style="{StaticResource NavRadioButtonTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <Path Data="{DynamicResource more}" Fill="{DynamicResource AppBackColor}" Width="15" Height="14"  Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Text="More" Style="{StaticResource NavRadioButtonTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>
                            <RadioButton x:Name="ChannelButton" Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup" Click="ChannelButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border>
                                        <Path Data="{DynamicResource arrowdown}" Fill="{DynamicResource AppBackColor}" Width="15" Height="6"  Stretch="Uniform"/>
                                    </Border>
                                    <TextBlock Text="Channels" Style="{StaticResource NavRadioButtonTextStyle}"/>
                                </StackPanel>
                            </RadioButton>
                            <StackPanel x:Name="ChannelList" Visibility="Collapsed" Margin="10,10,0,10">
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-1" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-2" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-3" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-4" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-5" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-6" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <TextBlock Text="#" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                        </Border>
                                        <TextBlock Text="channel-7" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup" Padding="0,8,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AppHoverColor}" Height="20" Width="20" CornerRadius="5">
                                            <Path Data="{DynamicResource plus}" Fill="{DynamicResource AppBackColor}" Opacity="100" Width="10" Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Padding="10,3,0,0" Text="Add channel" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>
                            <RadioButton x:Name="MessagesButton" Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup" Click="MessagesButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Border>
                                        <Path Data="{DynamicResource arrowdown}" Fill="{DynamicResource AppBackColor}" Width="15" Height="6"  Stretch="Uniform"/>
                                    </Border>
                                    <TextBlock Text="Direct messages" Style="{StaticResource NavRadioButtonTextStyle}"/>
                                </StackPanel>
                            </RadioButton>
                            <StackPanel x:Name="MessagesList" Visibility="Collapsed" Margin="10,10,0,0">
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AppHoverColor}" Height="30" Width="30" Margin="0,5,0,5" CornerRadius="5">
                                            <Grid>
                                                <Image Source="Resources\user1.png" Stretch="Fill"/>
                                                <Border Background="{DynamicResource NavbarBackColor}" CornerRadius="5" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-3,-3">
                                                    <Ellipse Fill="Green" Width="10" Height="10" />
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Text="Heal" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AppHoverColor}" Height="30" Width="30" Margin="0,5,0,5" CornerRadius="5">
                                            <Grid>
                                                <Image Source="Resources\user2.png" Stretch="Fill"/>
                                                <Border Background="{DynamicResource NavbarBackColor}" CornerRadius="5" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-3,-3">
                                                    <Ellipse Fill="Green" Width="10" Height="10" />
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Text="Heal" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AppHoverColor}" Height="30" Width="30" Margin="0,5,0,5" CornerRadius="5">
                                            <Grid>
                                                <Image Source="Resources\user2.png" Stretch="Fill"/>
                                                <Border Background="{DynamicResource NavbarBackColor}" CornerRadius="5" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-3,-3">
                                                    <Border Background="{DynamicResource AppBackColor}" CornerRadius="5" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                                                        <Ellipse Fill="{DynamicResource NavbarBackColor}" Width="5" Height="5"/>
                                                    </Border>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Text="Kamran" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                                <RadioButton Style="{StaticResource NavRadioButtonStyle}" GroupName="NavigationGroup" Padding="0,8,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AppHoverColor}" Height="20" Width="20" CornerRadius="5">
                                            <Path Data="{DynamicResource plus}" Fill="{DynamicResource AppBackColor}" Opacity="100" Width="10" Stretch="Uniform"/>
                                        </Border>
                                        <TextBlock Padding="10,3,0,0" Text="Add Teammates" Style="{StaticResource NavRadioButtonSubTextStyle}"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Frame Grid.Column="2" Name="fContainer" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
